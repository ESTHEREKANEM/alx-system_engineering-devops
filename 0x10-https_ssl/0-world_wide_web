#!/usr/bin/env bash
# A Script that displays information and subdomains

display_() {
  local domain="$1"
  local subdomain="$2"
  local record_type=$(dig +short "$subdomain.$domain" | awk '{print $4}')
  local destination=$(dig +short "$subdomain.$domain" | awk '{print $5}')

  printf "The subdomain %s is a %s record and points to %s\n" "$subdomain" "$record_type" "$destination"
}

domain="$1"
subdomain="$2"

if [[ -z "$subdomain" ]]; then
  subdomains=(www lb-01 web-01 web-02)
else
  subdomains=("$subdomain")
fi

for sub in "${subdomains[@]}"; do
  display_info "$domain" "$sub"
done
